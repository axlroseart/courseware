      font-family Sassoon
      font-size 88px
      float right
      max-width 600px
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      margin-top 50px
      margin-right 50px
      // margin-left 70px
      padding-left 15px
    .el-progress--circle
      width 137px
      height 192px
      float left
      margin-top 0px
      margin-left 40px
      background url(../images/rabbit-ear.png) no-repeat center
      background-size 100%
      .el-progress__text
