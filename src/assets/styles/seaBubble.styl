      .el-progress-circle__track
        stroke #ffd8c2
    .rabbit-count-down-wrap
      position relative
      width 137px
      height 192px
      float left
      margin-top 0px
      margin-left 40px
      background url(../images/rabbit-ear.png) no-repeat center
      background-size 100%
    .active-img
      position relative
      display inline-block
      margin 0 auto
      width 114px
      height 100%
