@require './mixins.styl'
.hotBox{
  height: 100vh;
  background: url('../images/hotAir.png') no-repeat;
  background-size: cover;
  position relative;
  overflow hidden
  display: flex;
  justify-content: center;
}
.hotBox  .hotLeft{
    width:490px;
    height:712px;
    background: url('../images/hotLeft.png') no-repeat;
    background-size: contain;
    position absolute;
    left 110px;
    bottom 150px;
  }
.hotBox    .leftOne{
      width 100%
      height 480px;
      position relative
    }
      .leftOne img,.centerOne img,.rightOne img{
          position: absolute;
          left: 0;
          right: 0;
          margin: auto;
      }
.hotBox .leftOne img{
  top:150px;
}
.hotBox .centerOne img{
  top:180px;
}
.hotBox .rightOne img{
  top:250px;
}
.hotBox    .hotCenter{
      width:500px;
      height:750px;
      background: url('../images/hotCenter.png') no-repeat;
      background-size: contain;
      position absolute;
      bottom 250px;
      left: 722px;
    }
.hotBox      .centerOne{
        width 100%
        height 520px;
        position relative
      }
.hotBox .hotRight{
  width:473px;
  height:815px;
  background: url('../images/hotRight.png') no-repeat;
  background-size: contain;
  position absolute;
  right 110px;
  bottom 150px;
}
.hotBox  .rightOne{
    width 100%
    height 587px;
    position relative
  }
.hotBox    .hotStar{
      height:80px;
      position relative;
      margin-top -65px;
      z-index: 9;
      text-align center
    }
.hotBox .hotStar img{
  max-height: 100%;
  display: block;
  margin: 14px auto;
}
.hotBox  .hotPer{
    position relative;
    margin-top -10px;
    overflow hidden
  }
.hotBox    .hotLeft .hotPer{
      height:129px;
    }
.hotBox      .hotCenter .hotPer{
        height:128px;
      }
.hotBox        .hotRight .hotPer{
          height:125px;
        }
.hotBox .hotPer img{
  display: block;
  margin: 0 auto;
  z-index: 1;
  border-radius: 84px;
  width: 131px;
}
.hotBox  .hotName{
    text-align center;
    font-size  42px;
    line-height 115px;
    color:white
  }
.hotBox    .hotYuyin{
      height:202px;
      position absolute;
      bottom 10px;
      width: 594px;
      z-index 10
    }
.hotBox .hotYuyin img{
  max-height 100%;
}
.hotBox  .hotCon{
    height: 100%;
    width: 100%;
    position: absolute;
    top: 998px;
  }
.hotBox .picture{
  width 154px
  height 220px
}
.hotBox  .voiceWaves{

  }
.hotBox  embed{
    width 100%
    height 100%
  }
.hotBox    .voiceProgress{
      position: absolute;
      left: 225px;
      top: 27px;
}
.hotBox  .textTitle{
  text-align: center;
  font-size: 70px;
  position: absolute;
  width: 100%;
  bottom: 52px;
  color: #333333;
}
.hotBox .voiceWaves{
  margin-left 24px
}