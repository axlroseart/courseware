#robStarsBox .hengProgress{
  width: 400px;
  margin: 40px auto;
}
#robStarsBox .hengProgress  .el-progress-bar {
  border: #333 0.020833333333333rem solid;
  border-radius: 0.104166666666667rem;
}
#robStarsBox .hengProgress .el-progress-bar .el-progress-bar__inner {
  background-image: -webkit-gradient(linear, left top, right top, from(#feeb00), to(#f5480e));
  background-image: linear-gradient(to right, #feeb00, #f5480e);
}
#robStarsBox .hengProgress .el-progress-bar__innerText{
  top: -0.208333333333333rem;
}
#robStarsBox .hengProgress .el-progress-bar .el-progress-bar__innerText {
  background: url(../images/progress-star.png) no-repeat;
  position: absolute;
  width: 80px;
  height: 80px;
  background-size: cover;
  right: -0.208333333333333rem;
  text-indent: 9999px;
  top: -28px;
}
#robStarsBox .hengProgress .el-progress-bar .el-progress-bar__outer {
  overflow: visible;
}
